<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="collective.wasthisuseful">
<body>
  <div metal:fill-slot="main"
      tal:define="
        rating_enabled view/ratingEnabled;
        ">
            
    <h1 i18n:translate="heading_settings_screen">Usefulness rating settings</h1>

    <form>
      <table class="plain">
        <tr>
          <th i18n:translate="heading_rating_enabled">Rating enabled</th>
          <td><input 
              type="checkbox"
              disabled="disabled"
              tal:attributes="
                checked python:rating_enabled and 'checked';
                "
              /></td>
        </tr>
      </table>
    </form>

  </div>
</body>
</html>
