<tal:defineEnabled tal:define="enabled view/enabled">
    
    <div id="useful" tal:condition="enabled" i18n:domain="collective.wasthisuseful">
        <div class="relevance">
        
            <tal:label omit-tag="" i18n:translate="label_was_this_useful">
                Was this information useful?
            </tal:label>

            <div class="javascript-only">
                <a href="#" i18n:attributes="title" title="Yes, this information was useful." class="thumbs up"/>
                <a href="#" i18n:attributes="title" title="No, this information was not useful." class="thumbs down"/>
            </div>


            <metal:block tal:define='view view/get_not_useful_form'>
                <metal:block use-macro="view/@@ploneform-macros/titlelessform" />
            </metal:block>
            <metal:block tal:define='view view/get_useful_form'>
                <metal:block use-macro="view/@@ploneform-macros/titlelessform" />
            </metal:block>
        </div>
    </div>

</tal:defineEnabled>
